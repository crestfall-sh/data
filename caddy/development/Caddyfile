
{
  debug
  auto_https off
  log {
    format console
  }
}

# note: exclude trailing slash; correct: http://localhost; incorrect: http://localhost/
http://localhost, http://0.0.0.0 {
  handle {
    rewrite /psgc-regions /collections/psgc-regions/documents/search?query_by=name_extended&{query}
    rewrite /psgc-provinces /collections/psgc-provinces/documents/search?query_by=name_extended&{query}
    rewrite /psgc-cities /collections/psgc-cities/documents/search?query_by=name_extended&{query}
    rewrite /psgc-municipalities /collections/psgc-municipalities/documents/search?query_by=name_extended&{query}
    rewrite /psgc-submunicipalities /collections/psgc-submunicipalities/documents/search?query_by=name_extended&{query}
    rewrite /psgc-barangays /collections/psgc-barangays/documents/search?query_by=name_extended&{query}
    reverse_proxy 0.0.0.0:8108 {
      header_up X-TYPESENSE-API-KEY {$TYPESENSE_SEARCH_ONLY_KEY}
    }
  }
}
